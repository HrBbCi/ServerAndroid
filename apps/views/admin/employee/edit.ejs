<body class="hold-transition skin-blue sidebar-mini">
	<div class="wrapper">
		<%- include ../mainheader %>
		<%- include ../sidebar %>
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<section class="content-header">
				<label></label>
				<ol class="breadcrumb">
					<li><a href="/admin"><i class="fa fa-dashboard"></i>
							Home</a></li>
					<li class="active">Manager Employee</li>
				</ol>
			</section>
			<!-- Main content -->
			<section class="content">
				<div class="box">
					<div class="box-body">
						<form id="form-upload" action="/multiple-upload" enctype="multipart/form-data" method="post">
							<table id="table_id" class="table table-striped" cellspacing="0"
								style="width:950px;max-width:950px">
								<thead></thead>
								<tbody id="tbodyContent1">
									<tr>
										<td width="50px"><label>Empl ID: </label></td>
										<td><input style="width:950px;max-width:950px" type="text" readonly
												value="<%= employee.Id %>" id="emplid" name="emplid"></td>
									</tr>
									<tr>
										<td width="50px"><label>Fullname: </label></td>
										<td><input type="text" style="width:950px;max-width:950px"
												value="<%= employee.Fullname %>" id="Fullname" name="Fullname"></td>
									</tr>
									<tr>
										<td width="50px"><label>StartWork: </label></td>
										<td><input type="date" style="width:950px;max-width:950px"
												value="<%= employee.StartWork %>" id="StartWork" name="StartWork"></td>
									</tr>

									<tr>
										<td width="50px"><label>Email: </label></td>
										<td><input type="text" style="width:950px;max-width:950px"
												value="<%= employee.Email %>" id="Email" name="Email"></td>
									</tr>

									<tr>
										<td width="50px"><label>Phone: </label></td>
										<td><input type="text" style="width:950px;max-width:950px"
												value="<%= employee.Phone %>" id="Phone" name="Phone"></td>
									</tr>
									<tr>
										<td width="50px"><label>Salary: </label></td>
										<td><input type="text" style="width:950px;max-width:950px"
												value="<%= employee.Salary %>" id="Salary" name="Salary"></td>
									</tr>
									
									<tr>
										<td width="50px"><label>Role: </label></td>
										<td>
											<select id="role" name="role">
												<% if(employee.Role === "admin"){%>
												<option value="admin" selected>admin</option>
												<%}else{%>
												<option value="admin">admin</option>
												<%}%> 
											 
											 <% if(employee.Role === "user"){%>
												<option value="user" selected>user</option>
												<%}else{%>
												<option value="user">user</option>
												<%}%> 
											 									 
											</select>
										</td>
									</tr>
								</tbody>
							</table>
						</form>

						<div class="col-sm-12 text-right">
							<button class="btn  btn-info btn-success" id="btnSubmit" name="btn1">
								<i class="glyphicon glyphicon-edit"></i>Save
							</button>
							<button class="btn btn-warning" id="btnBack" name="btnBack">
								<i class="glyphicon glyphicon-backward"></i>Back
							</button>
						</div>
					</div>
				</div>
			</section>
			<!-- Main row -->
		</div>
  </div>
